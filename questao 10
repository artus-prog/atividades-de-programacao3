altura = float(input("Digite a altura: "))
sexo = (input("Digite M para o sexo masculino e F para o sexo feminino: "))
if sexo == (f"M"):
    peso_ideal = (f"{(72.7 * altura)-58:.2f}")
    print(f"O peso ideal é: {peso_ideal}")
elif sexo == (f"F"):
    peso_ideal = (f"{(62.1*altura)-44,7:.2f}")
    print(f"O peso ideal é: {peso_ideal}")
